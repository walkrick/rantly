


<section class="dashboard_section">

  <table class="table">
    <thead>
    <tbody>
    <h2>Latest Rants</h2>
    </thead>
    <tbody>
    <tr>
      <% @rants.each do |rant| %>
        <td><%= link_to rant.user.first_name, user_path(rant.user) %>
          <br>
          <img src=<%= rant.user.image %> width="50" height="50"/><br>
          <%= follow_link (rant.user.id) %></td>

        <td><%= rant.rant_title %></td>
        <td>
          <%= rant.rant %>
          <%= link_to "Delete", rant_path(rant.id), :method => :delete %>
        </td>
        </tr>
      <% end %>
      </tbody>
  </table>
</section>
<section class="dashboard_bottom_section">

  <h2>My Rants</h2>

</section>