<h3><nav>Registration</nav>
</h3>
<%= form_for @user do |f| %>

  <% if @user.errors.present? %>
    <div class="errors">
      <h3>There was an error</h3>
      <ul class="error-list">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.text_field :username, autofocus: true, placeholder: "Username" %>
  </div>

  <div>
    <%= f.text_field :first_name, autofocus: true, placeholder: "First Name" %>
  </div>
  <div>
    <%= f.text_field :last_name, autofocus: true, placeholder: "Last Name" %>
  </div>

  <div>
    <%= f.password_field :password, autofocus: true, placeholder: "Password" %>
  </div>
  <div>
    <%= f.text_field :bio, autofocus: true, placeholder: "Bio" %>
  </div>
  <% for frequency in Categories.find(:all) %>
    <div>
      <%= radio_button_tag "post[frequency]", category.id, @post.category_id == category.id %><%= category.name %>
    </div>
  <% end %>

  <div>
    <%= f.submit class: "form-button" %>
  </div>

<% end %>