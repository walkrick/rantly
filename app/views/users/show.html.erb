<section class="dashboard_section">

  <div>
    <h1><%= (@user).first_name %> <%= (@user).last_name %></h1>
    <%= follow_link @user %>
  </div>

  <div><img src=<%= @user.image %> width="100" height="100"/><br></div>
  <div><%= (@user).bio %></div>

  </div>
  <div><%= link_to "Edit", edit_user_path(params[:id]) %></div>
  <%= notice %>

  <table class="table">
    <thead>
    <tbody>
    <h3>My Rants</h3>
    </thead>
    <tbody>
    <tr>
      <% @rants.each do |rant| %>
        <td><%= rant.rant_title %></td>
        <td>
          <%= truncate(rant.rant, :length => 300) %>
          <%= favorite_link(rant) %>
          <%= rant.favorited_count %>
        </td>
        </tr>
      <% end %>
      </tbody>
  </table>

</section>


